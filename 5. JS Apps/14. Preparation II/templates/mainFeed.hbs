{{> header}}
{{> navigation}}
<section id="viewFeed">
        <div class="content">
            <div class="chirper">

                <h2 class="titlebar">{{username}}</h2>

                <form action="#/postChirp" method="post" id="formSubmitChirp" class="chirp-form">
                    <textarea name="text" class="chirp-input"></textarea>
                    <input class="chirp-submit" id="btnSubmitChirp" value="Chirp" type="submit">
                </form>

                <div id="userStats" class="user-details">
                    <span>{{chirpsCount}} chirps</span> | <span>{{followingCount}} following</span> | <span>0 followers</span>
                </div>
            </div>
            <div id="chirps" class="chirps"><h2 class="titlebar">Chirps</h2>
            {{#each chirps}}
                {{> chirpsInMain}}
                {{/each}}
                <!-- TODO Load more articles -->
            </div>
        </div>
    </section>
    {{> footer}}